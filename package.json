{
  "name": "cc-infra",
  "version": "1.0.0",
  "private": true,
  "description": "cc-infra Monorepo",
  "main": "index.js",
  "scripts": {
    "bootstrap": "npx lerna run build --scope=create-new-project && create-new-project",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "changeset": "changeset",
    "changeset:pre": "changeset pre",
    "changeset:status": "changeset status",
    "version-package": "changeset version",
    "lint": "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --ext ts,tsx,vue .",
    "update:lockfile": "pnpm install --lockfile-only"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.7.0"
  },
  "packageManager": "pnpm@8.15.0",
  "eslintConfig": {
    "extends": [
      "@cc-infra/eslint-config"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,vue}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix-dry-run --color --cache --quiet"
    ]
  },
  "devDependencies": {
    "@cc-infra/eslint-config": "workspace:^",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "@types/yargs": "^17.0.32",
    "@vitejs/plugin-vue": "^5.0.4",
    "chalk": "4.1.2",
    "create-new-project": "workspace:^",
    "cross-env": "^7.0.3",
    "eslint": "8.56.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-vue": "^9.26.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "inquirer": "^10.0.1",
    "lerna": "^8.1.6",
    "rollup": "^4.18.1",
    "sass": "^1.77.6",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.2.0",
    "vitest": "^2.0.2",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.6",
    "yargs": "^17.7.2"
  },
  "keywords": [
    "monorepo"
  ],
  "author": "ccweng",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "common-utils": "workspace:^",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "pinia": "^2.1.7",
    "prisma": "^5.16.2",
    "reflect-metadata": "^0.2.2",
    "tdesign-vue-next": "^1.9.6",
    "vue": "^3.4.21",
    "vue-router": "^4.3.3"
  }
}
